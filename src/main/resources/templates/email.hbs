    <div class="row presentation">
        <div class="col-7">
        <h1 class="main-title">Generate your emails</h1>
        <h5 class="description-title">Easy auto-generator and suggestion of email account for your new hires </h3>

        </div>
        <div class="col-5">
            <form action="/generate" method="POST">
                <div class="form-group">
                    <label for="firstname" class="firstname">First Name</label>
                    <input type="text" class="form-control" name="firstname" placeholder="Enter employee's first Name" required>
                </div>
                <div class="form-group">
                 <label for="lastname" class="lastname">Last Name</label>
                    <input type="text" class="form-control" name="lastname" placeholder="Enter employee's last name" required>
                </div>
                <div class="form-group">
                    <label for="department" class="department">Enter your department</label>
                     <select class="form-control" name="department" required>
                        <option></option>
                        <option>sales</option>
                        <option>development</option>
                        <option>accounting</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary generatebutton">Generate</button>
            </form>
            
        </div>
    </div>


</div>




